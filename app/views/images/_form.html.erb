<%= form_for @image, :html => { :id => 'playground_form', :multipart=>true }, :remote => true do |f| %>

  <% if @image.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@image.errors.count, "error") %> prohibited this playground from being saved:</h2>

      <ul>
      <% @image.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.select(:sport, Image::SPORTS, {:include_blank => h('<Please select sport>')}) %>
  </div>
  <%= f.file_field :picture, :class => 'file_field' %>
  <%= f.hidden_field :latitude %>
  <%= f.hidden_field :longitude %>
  <%= f.hidden_field :street_number %>
  <%= f.hidden_field :route %>
  <%= f.hidden_field :city %>
  <%= f.hidden_field :country %>
  <%= f.hidden_field :postal_code %>
  
  <%= f.submit class: "btn btn-lg btn-primary" %>
  
<% end %>



